{
  "name": "vibe",
  "version": "0.1.0",
  "description": "Simple MCP configuration deployment for Claude, Codex, Gemini, and Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vibe": "./dist/bin/vibe.js",
    "vibe-claude": "./dist/bin/claude.js",
    "vibe-codex": "./dist/bin/codex.js",
    "vibe-gemini": "./dist/bin/gemini.js",
    "vibe-claude-code": "./dist/bin/claude-code.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "install:claude": "npm run build && node dist/bin/claude.js",
    "install:codex": "npm run build && node dist/bin/codex.js",
    "install:gemini": "npm run build && node dist/bin/gemini.js",
    "install:claude-code": "npm run build && node dist/bin/claude-code.js",
    "install:all": "npm run build && node dist/bin/vibe.js all",
    "deploy:claude": "npm run build && node dist/bin/claude.js",
    "deploy:codex": "npm run build && node dist/bin/codex.js",
    "deploy:gemini": "npm run build && node dist/bin/gemini.js",
    "deploy:claude-code": "npm run build && node dist/bin/claude-code.js",
    "deploy:all": "npm run build && node dist/bin/vibe.js all",
    "setup": "npm run build && chmod +x dist/bin/*.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "keywords": [
    "ai",
    "mcp",
    "configuration",
    "claude",
    "codex",
    "gemini",
    "claude-code"
  ],
  "author": "Vibe Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "inquirer": "^12.9.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
